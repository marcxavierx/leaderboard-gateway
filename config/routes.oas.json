{
  "openapi": "3.1.0",
  "info": {
    "title": "Leaderboard API Gateway",
    "version": "1.0.0",
    "description": "A secure API gateway that proxies and sanitizes casino leaderboard data, exposing only usernames and wager amounts while protecting all other sensitive information."
  },
  "paths": {
    "/leaderboard": {
      "x-zuplo-path": {
        "pathMode": "open-api"
      },
      "get": {
        "summary": "Retrieve sanitized leaderboard data",
        "description": "Fetches leaderboard data from the casino API using a secure backend token stored as an environment variable, then sanitizes the response to expose only username and wager.",
        "tags": [
          "Leaderboard"
        ],
        "responses": {
          "200": {
            "description": "Sanitized leaderboard data"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API key"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "operationId": "leaderboard",
        "x-zuplo-route": {
          "corsPolicy": "anything-goes",
          "handler": {
            "export": "urlRewriteHandler",
            "module": "$import(@zuplo/runtime)",
            "options": {
              "rewritePattern": "${env.CASINO_URL}",
              "forwardSearch": true
            }
          },
          "policies": {
            "inbound": [
              "api-key-inbound"
            ],
            "outbound": [
              "inject-casino-token",
              "sanitize-leaderboard-data"
            ]
          }
        }
      }
    }
  }
}